                                            value="Administrator"
                                        {% else %}
                                            value="Agent"
                                        {% endif %}
                                    >
								</div>
							</div>
                            {% if user.user_type == 1 %}
                            <div class="form-group m-form__group row">
								<label for="example-text-input" class="col-2 col-form-label">Role</label>
								<div class="col-7">
									<input class="form-control m-input" type="text"  value="{{ user.role }}">
								</div>
							</div>
                            <div class="form-group m-form__group row">
								<label for="example-text-input" class="col-2 col-form-label">D.O.B</label>
								<div class="col-7">
									<input class="form-control m-input" type="text"  value="{{ user.dob }}">
								</div>
							</div>
                            {% else %}
                            <div class="form-group m-form__group row">
								<label for="example-text-input" class="col-2 col-form-label">Agent Type</label>
								<div class="col-7">
									<input class="form-control m-input" type="text"                                         
                                        {% if user.agent_type == 1 %}
                                            value="Single Agent"
                                        {% else %}
                                            value="Company"
                                        {% endif %}
                                    >
								</div>
							</div>
                            <div class="form-group m-form__group row">
								<label for="example-text-input" class="col-2 col-form-label">Company Id</label>
								<div class="col-7">
									<input class="form-control m-input" type="text" value="{{ user.company_id }}">
								</div>
							</div>
                            {% endif %}							
							<div class="form-group m-form__group row">
