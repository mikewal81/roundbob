{% extends 'templates/agents.twig' %}

{% block content %} 

<!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">{{ title }}</h3>
            </div>
            <div>
  							<span class="m-subheader__daterange" id="m_dashboard_daterangepicker">
					<span class="m-subheader__daterange-label">
						<span class="m-subheader__daterange-title"></span>
						<span class="m-subheader__daterange-date m--font-brand"></span>
					</span>
				</span>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->	        
<div class="m-content">
<div class="row">
	<div class="col-lg-12">
		<!--begin::Portlet-->
		<div class="m-portlet">
			<!-- <div class="m-portlet__head">
				<div class="m-portlet__head-caption">
					<div class="m-portlet__head-title">
						<span class="m-portlet__head-icon m--hide">
						<i class="la la-gear"></i>
						</span>
						<h3 class="m-portlet__head-text">
							Horizontal Form Sections
						</h3>
					</div>
				</div>
			</div> -->
			<!--begin::Form-->
			<form class="m-form m-form--label-align-right" method="post" action="{{ path_for('agent.postAddPackage') }}">
				<div class="m-portlet__body">	
					<div class="m-form__section m-form__section--first">		
						<div class="m-form__heading">
							<h3 class="m-form__heading-title">Package Info:</h3>
						</div>
						<div class="form-group m-form__group row">
							<label class="col-lg-2 col-form-label">Name *</label>
							<div class="col-lg-6">
								<input type="text" class="form-control m-input" placeholder="Enter Package name" name="name" id="name">
							</div>
						</div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Package Category *</label>
                            <div class="col-lg-6">
                                <select class="form-control m-input" name="category">
                                    <option value="">Select Package Category</option>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Description </label>
                            <div class="col-lg-6">
                                <textarea class="form-control m-input" placeholder="Enter Package Description" name="description" id="description"></textarea>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Price($) *</label>
                            <div class="col-lg-6">
                                <input type="number" class="form-control m-input" placeholder="Enter Package Price" name="price" id="price">
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
							<label class="col-lg-2 col-form-label">Valid From *</label>
							<div class="col-lg-6">
								<input type="date" class="form-control" id="validity_from" placeholder="Select Validity Start Date" name="valid_from">
							</div>
						</div>
                        <div class="form-group m-form__group row">
							<label class="col-lg-2 col-form-label">Valid To *</label>
							<div class="col-lg-6">
								<input type="date" class="form-control" id="validity_to" placeholder="Select Validity End Date" name="valid_to">
							</div>
						</div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Display Image </label>
                            <div class="col-lg-6">
                                <input type="file" name="display_image" id="display_image">
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Other Images </label>
                            <div class="col-lg-6">
                                <input type="file" name="images" id="images">
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Location City </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control m-input" placeholder="Enter Package's Home City" name="city" id="city">
                            </div>
                        </div>                        
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">Location Country </label>
                            <div class="col-lg-6">
                                <select class="form-control m-input" name="country">
                                    <option value="">Select Package's Home Country</option>
                                    {% for country in countries %}
                                        <option value="{{ country.iso }}">{{ country.nicename }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

		            <div class="m-form__seperator m-form__seperator--dashed"></div>		

	            </div>
	            <div class="m-portlet__foot m-portlet__foot--fit">
					<div class="m-form__actions m-form__actions">
						<div class="row">
							<div class="col-lg-2"></div>
							<div class="col-lg-6">
								<button type="submit" class="btn btn-primary">Submit</button>
								<button type="reset" class="btn btn-secondary">Cancel</button>
							</div>
						</div>
					</div>
				</div>
			</form>
			<!--end::Form-->
		</div>
		<!--end::Portlet-->
	</div>
</div>		        </div>
			    		    </div>

				
		</div>
				<!-- end:: Body -->
<script src="{{ base_url }}/admin/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
	function userTypeCheckbox2(){
		var customer_checkBox = document.getElementById("customer");
		var agent_checkBox = document.getElementById("agent");
		var admin_checkBox = document.getElementById("admin");
		var customer_info = document.getElementById("customer-info");
		var agent_info = document.getElementById("agent-info");
		var admin_info = document.getElementById("admin-info");
		if(customer_checkBox.checked == true){
			customer-info.style.display = "block";
		} elseif(agent_checkBox.checked == true){
			agent-info.style.display = "block";
		} elseif(admin_checkBox.checked == true){
			admin-info.style.display = "block";
		} else {
			customer_info.style.display = "none";
			agent_info.style.display = "none";
			admin_info.style.display = "none";
		}
	}
	function userTypeCheckbox(){
		$(#customer-info).hide();
		$(#agent-info).hide();
		$(#admin-info).hide();
		$(#customer).select(function(){
			$(#customer-info).show();
		});
		$(#agent).select(function(){
			$(#agent-info).show();
		});
		$(#admin).select(function(){
			$(#admin-info).show();
		});
	}
</script> 

{% endblock %}