{% extends 'templates/agents.twig' %}

{% block content %}

<!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title ">{{ title }}</h3>
            </div>
            <div>
  							<span class="m-subheader__daterange" id="m_dashboard_daterangepicker">
					<span class="m-subheader__daterange-label">
						<span class="m-subheader__daterange-title"></span>
						<span class="m-subheader__daterange-date m--font-brand"></span>
					</span>
				</span>
            </div>
        </div>
    </div>
<!-- END: Subheader -->

<div class="m-content">
  <div class="row">
	<div class="col-lg-12">
		<div class="m-portlet">	 
			<div class="m-portlet__body m-portlet__body--no-padding">
				<div class="m-invoice-2">
					<div class="m-invoice__wrapper">
						<div class="m-invoice__head" style="background-image: url(./assets/app/media/img//logos/bg-6.jpg);">	
							<div class="m-invoice__container m-invoice__container--centered">			 		 
								<div class="m-invoice__logo">				 
									<a href="#">
                                        <img alt="" src="{{ base_url }}/admin/media/img/logo/logo.png"> 	
									</a>
								</div> 
								<span class="m-invoice__desc">
									<span>Plot 27, Luthuli Avenue</span>
									<span>Kampala Uganda</span>
								</span>
								<div class="m-invoice__items">
									<div class="m-invoice__item">
										<span class="m-invoice__subtitle">DATE</span>
										<span class="m-invoice__text">{{ "now"|date('l j F, Y') }}</span>
									</div>
									<div class="m-invoice__item">
										<span class="m-invoice__subtitle">AGENT</span>
										<span class="m-invoice__text">{{ user.first_name }} {{ user.middle_name }} {{ user.last_name }}</span>
									</div>
									<div class="m-invoice__item">
										<span class="m-invoice__subtitle">AGENT ADDRESS</span>
										<span class="m-invoice__text"> 
                                            {{ user.email_address }}<br>
                                            {{ user.address }}
                                        </span>
									</div>
								</div>
							</div>					 	
						</div>
						<div class="m-invoice__body m-invoice__body--centered">
							<div class="table-responsive"> 
							    <table class="table">
									<thead> 							 			 
										<tr>
										 	<th>NO</th>
										 	<th>DATE</th>
										 	<th>REF NO</th>
                                            <th>CURRENCY</th>
                                            <th>TRANSACTION TYPE</th>
										 	<th>AMOUNT</th>
										</tr>
									</thead>	
									<tbody>	
                                        {% if transactions == null %}
                                            <tr><td><td><td>No Records Found<td></tr>
                                        {% else %}
                                            {% for transaction in transactions %}
                                                {% set counter = ( counter | default(0)) + 1 %}
                                                <tr>
                                                    <td>{{ counter }}</td>
                                                    <td>{{ transaction.date|date('m-d-Y') }}</td>
                                                    <td>{{ transaction.ref_no }}</td>
                                                    <td>{{ transaction.currency }}</td>
                                                    <td>{{ transaction.transactionType }}</td>
                                                    <td class="m--font-danger">{{ transaction.amount }}</td>
                                                </tr>	
                                            {% endfor %}
                                        {% endif %}																								 
									</tbody> 
								</table>
							</div>					 		
						</div>
						<div class="m-invoice__footer">						 
							<div class="m-invoice__table  m-invoice__table--centered table-responsive"> 
								<table class="table">
									<thead> 							 			 
										<tr>
											<th>AGENT NUMBER</th>
											<th>AGENT TYPE</th>
											<th>AGENT RATING</th>
											<th>CURRENT WALLET BALANCE</th>
										</tr>
									</thead>	
									<tbody>	 
										<tr>
											<td>{{ user.agent_id }}</td>
											<td>
                                                {% if user.agent_type == 1 %}
                                                    Single User
                                                {% else %}
                                                    Company
                                                {% endif %}
                                            </td>
											<td>{{ user.rating }}</td>
											<td class="m--font-danger">{{ user.walletBalance }}</td>
										</tr>										 					 
									</tbody> 
								</table>
							</div>							 				 					
						</div>				 
					</div>	 
				</div>
			</div>
		</div>
	</div>
</div>		

 
 
  
     
 


 		        </div>
			    		    </div>

				
		</div>
				<!-- end:: Body -->				


{% endblock %}